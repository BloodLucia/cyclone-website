---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MustHead from "../components/MustHead.astro";
import { SITE_DESC, SITE_TITLE } from "../config";

interface Props {
  mustHeader?: boolean;
  title?: string;
}

const { mustHeader = false, title = "" } = Astro.props;
const pageTitle = title !== "" ? `${title} | ${SITE_TITLE}` : SITE_TITLE
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={pageTitle} description={SITE_DESC} />
  </head>
  <body>
    <Header />
      <main class="min-h-screen">
        { mustHeader && <MustHead /> }
        <slot />
      </main>
    <Footer />
  </body>
</html>
